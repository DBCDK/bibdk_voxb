function bibdk_voxb_menu() {
  $items = array();

  $items['voxb/ajax/get_rating'] = array(
    'title' => 'VoxB rating handler',
    'description' => '',
    'type' => MENU_CALLBACK,
    'access arguments' => array('search content'),
    'page callback' => 'bibdk_voxb_rating',
  );

  $items['voxb/ajax/set_rating/%/%'] = array(
